@model IEnumerable<SehirlerDto>



<div class="card">
    <div class="card-header row">
        <h3 class="col-10">Sehirler Listesi</h3>
        <a class="btn btn-primary col-2" asp-action="Post" asp-controller="Sehir">Yeni Kayit</a>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Sehir</td>
                    <td>Ülke</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.sehirAdi</td>
                        <td>@item.ulkeAdi</td>
                        <td><a class="btn btn-info" asp-action="Update" asp-controller="Sehir" asp-route-id="@item.id">Update</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Sehir" asp-route-id="@item.id">Delete</a></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
